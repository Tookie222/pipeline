pipeline {
    agent any

    environment {
        IMAGE = "my-node-app"
        CONTAINER = "nodeserver"
        PORT = "5000"
    }

    stages {
        stage('Build & Run') {
            steps {
                git branch: 'main', url: 'https://github.com/ajay-raut/spnodeserver.git'
                sh """
                  docker build -t $IMAGE .
                  docker run -d --name $CONTAINER -p $PORT:$PORT $IMAGE
                  sleep 10
                  docker ps
                  docker stop $CONTAINER || true && docker rm $CONTAINER || true
                """
            }
        }
    }

    post {
        failure {
            emailext(
              to: 'pansaredk2004@gmail.com',
              subject: "Build Failed: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
              body: "Build URL: ${env.BUILD_URL}\nCheck logs for details."
            )
        }
    }
}
